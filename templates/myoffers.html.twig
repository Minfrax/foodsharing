{% extends 'base.html.twig' %}

{% block title %}My Offers{% endblock %}

{% block body %}
    <section id="mainContent">
        <h2>My Offers</h2>
        <p class="col-md-12">Hello {{ app.user.username }}, here are your current offers. Feel free to edit and / or delete them.</p>
        {% for offer in offers | reverse %}
            <article>
                <ul class="content">
                    <li>
                        <h3 class="content">{{ offer.getTitle() }}</h3>
                        <p class="content">{{ offer.getDescription() }}</p>
                        <p class="content"><span>Created at: </span>{{ offer.getCreatedAt | date('Y-m-d') }}</p>
                        <a href="offer/{{ offer.getId }}" class="content">View</a>
                        <a href="MyOffers/del/{{ offer.getId }}">Delete</a></p>
                        <a href="MyOffers/EditOffer/{{ offer.getId }}">Edit</a>
                    </li>
                </ul>
            </article>
        {% endfor %}
    </section>
{% endblock %}